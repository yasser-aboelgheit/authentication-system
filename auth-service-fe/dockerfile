FROM node:18 AS build

WORKDIR /app

# Step 3: Copy the package.json and package-lock.json to install dependencies
COPY package*.json ./

# Step 4: Install dependencies
RUN npm install

# Step 5: Copy the rest of the application files
COPY . .

# Step 6: Expose port 5173 (the default port for React development server)
EXPOSE 5173

# Step 7: Command to run the React app in development mode
CMD ["npm", "run", "dev"]
